{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "webpack-env",
      "node",
    ],
    "paths": {
      "@src/*": ["ClientApp/src/*"], // will enable -> import { ... } from '@entities'
      "@components/*": ["ClientApp/src/components/*"],
      "@entities": ["ClientApp/src/entities"],
      "@entities/*": ["ClientApp/src/entities/*"],
      "@features/*": ["ClientApp/src/features/*"],
      "@features": ["ClientApp/src/features"],
      "@store": ["ClientApp/src/store"],
      "history": [
        "./node_modules/@types/history/index"
      ],
      "redux": [
        "./node_modules/@types/redux/index"
      ],
      "react": [
        "./node_modules/@types/react/index"
      ]
    }
  },
  "include": [
    "./ClientApp/**/*.ts",
    "./ClientApp/**/*.tsx"
  ],
  "exclude": [
    "./ClientApp/src/**/__tests__/*.test.ts",
    "./ClientApp/src/**/__tests__/*.test.tsx",
    "./ClientApp/storybook/**/*",
    "./ClientApp/storybook/*",
    "./node_modules"
  ]
}
